/**index.wxss**/
.section{
  position: absolute;
  top:146rpx;
  left:0;
  right:0;
  bottom:168rpx;
  background-color:rgba(240,239,245,1);
}
.section image{
  width:750rpx;
  height:280rpx;
  display: block;
}
.section .main-content{
  display: block;
  margin:0;
  padding:32rpx 30rpx;
  background-color:#fff;
}
.main-content text{
  margin:0;
  padding:0;
  font-family: PingFangSC-Regular;
  font-size:34rpx;
  color:#111111;
  line-height: 48rpx;
}
.latest-case{
  margin-top:8rpx;
  width:100%;
  background-color:#fff;
}
.latest-case-title{
  width:100%;
  height:60rpx;
  padding-top:28rpx;
  padding-left:30rpx;
}
.latest-case-title text{
  width:136rpx;
  height:48rpx;
  font-size:34rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(136,136,136,1);
  line-height:48rpx;
}
.latest-case-item{
  width:100%;
  height:182rpx;
  padding-left:30rpx;
  
}
.case-item{
  border-top:1rpx solid #E5E5E5;
  border-bottom:1rpx solid #E5E5E5;
  width:100%;
  height:100%;
  display: flex;
  justify-content: center;
  flex-direction: row;
  align-items: center;
}
.case-item image{
  width:120rpx;
  height:120rpx;
  display: inline-block;
  border:1rpx solid red;
}
.case-content{
  margin-left:20rpx;
  width:500rpx;
  display: inline-block;
  height:146rpx;
}
.case-content-title{
  font-size:34rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(34,34,34,1);
  line-height:48rpx;
}
.case-content-value{
  width:500rpx;
}
.case-content-value text{
  width:500rpx;
  height:96rpx;
  font-size:34rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(153,153,153,1);
  line-height:48rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
 -webkit-line-clamp: 2;
 -webkit-box-orient: vertical;
}